@model HandmadeShop.Models.ViewModels.ProductsByCategoryVM

<!DOCTYPE html>
<html>
<head>
    <title>Products By Category</title>
</head>
<body>
    <div class="container">
        <div class="card-header bg-secondary bg-gradient text-light py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">Products in: @Model.SelectedCategory.Name</h3>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title">@product.Title</h5>
                            <p class="card-text">Price: @product.ListPrice.ToString("c")</p>
                            <a asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
